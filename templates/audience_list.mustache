{{!
    @template local_announcements/audience_list

    View for an audience list.
}}

{{#audiencelist.0}}
    <ul class="list list-type-{{type}}">
        {{#audiencelist}}
        <li class="{{type}}-item">
            <label class="{{type}}-label"><input class="item" type="checkbox" value="{{code}}" data-name="{{name}}"> <span class="name">{{name}}</span></label>
        </li>
        {{/audiencelist}}
    </ul>
{{/audiencelist.0}}
{{^audiencelist.0}}{{#str}} audienceselector:noaudienceitems, local_announcements, {{typenameplural}} {{/str}}{{/audiencelist.0}}