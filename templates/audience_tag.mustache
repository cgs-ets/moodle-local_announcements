{{!
    @template local_announcements/audience_tag

    View for an audience tag.
}}
<div class="box-group box-group-{{type}}">
    {{#audiences}}
    <div class="box">
        <div class="audiences">
            <span class="subhead">{{audiencenameplural}}:</span>
            <ul class="selecteditems comma-list">
                {{#selecteditems}}
                <li>{{name}}</li>
                {{/selecteditems}}
            </ul>
        </div>
        {{#selectedroles.0}}
        <div class="roles">
            <span class="subhead">Roles:</span>
            <ul class="selectedroles comma-list">
                {{#selectedroles}}
                <li>{{name}}</li>
                {{/selectedroles}}
            </ul>
        </div>
        {{/selectedroles.0}}
        <a class="remove-tag" data-taguid="{{uid}}" href="#">{{#pix}} i/close, local_announcements, Remove selected audience {{/pix}}</a>
    </div>
    {{/audiences}}
</div>