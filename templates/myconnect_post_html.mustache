{{!
    @template local_announcements/myconnect_post_html

    View for a single myconnect post in the digest.
}}
<table class="myconnectpost" border="0" cellspacing="0" cellpadding="20" width="100%">
    <tbody>
        <tr>
            <table data-id="{{id}}" class="myconnectpost-content" border="0" cellspacing="0" cellpadding="0" width="100%">
                <tbody>
                    <tr>
                        <td>
                            <table class="metainfo" border="0" cellspacing="0" cellpadding="0" width="100%">
                                <tbody>
                                    <tr>
                                        
                                    </tr>
                                </tbody>
                            </table> 
                            <table class="author" border="0" cellspacing="0" cellpadding="0" width="100%">
                                <tbody>
                                    <tr>
                                        <td width="45" valign="top" class="userpicture left">
                                            <img src="{{creatorphototokenised}}" alt="{{creatorfullname}}" title="{{creatorfullname}}" />
                                        </td>
                                        <td>{{creatorfullname}} > {{postuserfullname}}</td>
                                        <td class="time">{{readabletime.standard}}</td>
                                    </tr>
                                </tbody>
                            </table>     
                            <table class="message" border="0" cellspacing="0" cellpadding="0" width="100%">
                                <tbody>
                                    <tr>
                                        <td>
                                            {{{emailmessage}}}
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                            {{#attachmentstokenized.0}}
                                <table class="attachments" border="0" cellspacing="0" cellpadding="0" width="100%">
                                    <tbody>
                                        <tr>
                                            <td>
                                                {{#attachmentstokenized}}<a target="_blank" href="{{path}}"><img width="90" height="90" src="{{path}}?preview=thumb" alt="{{filename}}" /></a>{{/attachmentstokenized}}
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            {{/attachmentstokenized.0}}
                            <table class="attachments" border="0" cellspacing="0" cellpadding="0" width="100%">
                                <tbody>
                                    <tr>
                                        <td><a href="{{singleurl}}">View full format online</a> . <a href="{{singleurl}}">Add a reply</a></td>
                                    </tr>
                                </tbody>
                            </table>
                        </td>
                    </tr>
                </tbody>
            </table>
        </tr>
    </tbody>
</table>