{{!
    @template local_announcements/message_announcement

    View for a single announcement.
}}

<div style="margin-bottom: 20px;">
  <strong>{{subject}}</strong><br>
  <small>From: {{authorfullname}}{{#authorjobpositions}} ({{authorjobpositions}}){{/authorjobpositions}}</small><br>
  <small>To: {{#audiences}}{{#conditions}}{{name}}{{^last}} + {{/last}}{{/conditions}}{{^last}}, {{/last}}{{/audiences}}</small><br>
  <small>Date: {{readabletime}}</small>
</div>

<div>
  {{{emailmessage}}}
</div>
             
{{#attachmentstokenized.0}}
  Attachments:<br>
  {{#attachmentstokenized}}
    <a target="_blank" href="{{path}}">{{filename}}</a><br>
  {{/attachmentstokenized}}
{{/attachmentstokenized.0}}

<p style="margin-top: 15px;">
  <a href="{{viewurl}}">View on CGS Connect</a>
</p>